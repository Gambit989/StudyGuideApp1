<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:wheel="http://schemas.android.com/apk/lib/com.pnikosis.materialishprogress.ProgressWheel"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/mobile_portrait_2"
    android:layout_height="match_parent">





    <Button
        android:id="@+id/splash_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="87dp"
        android:textSize="40dp"
        android:paddingTop="20dp"
        android:elevation="15dp"
        android:textColor="@color/Black"
        android:background="@mipmap/button"/>



    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="185dp"
        android:layout_below="@id/splash_text"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="@color/royal_blue"
        wheel:matProg_progressIndeterminate="true" />




    <ImageView
        android:id="@+id/splash_image_load_icon_4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/ec_logo_2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>

