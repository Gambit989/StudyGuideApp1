<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_email"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView_email_box"
        android:layout_width="wrap_content"
        android:text="Your Username:   "
        android:layout_toLeftOf="@id/textView_email"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/textView_name"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView_email"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView_name_box"
        android:layout_width="wrap_content"
        android:text="Your Name:  "

        android:layout_height="36dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_weight="1"
        android:layout_alignBaseline="@+id/textView_name"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_toLeftOf="@+id/textView_name"
        android:layout_toStartOf="@+id/textView_name"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />



    <TextView
        android:id="@+id/textView_phone"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView_name"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"

        android:layout_weight="1" />


    <TextView
        android:id="@+id/textView_phone_box"
        android:text="Phone Number: "
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_weight="1"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/textView_phone"
        android:layout_toLeftOf="@+id/textView_phone"
        android:layout_toStartOf="@+id/textView_phone"/>





    <TextView
        android:id="@+id/textView_password"
        android:text="TextView"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/textView_phone"/>


    <Button
        android:id="@+id/display_button"
        android:text="Back to Log-in"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="25dp"/>



    <TextView
        android:id="@+id/textView_password_box"
        android:text="Password: "
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_weight="1"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/textView_password"
        android:layout_toLeftOf="@+id/textView_password"
        android:layout_toStartOf="@+id/textView_password"/>


</RelativeLayout>
