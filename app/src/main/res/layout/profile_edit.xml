<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/my_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="SCHOOL"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/profile_school"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profile_school"
        android:id="@+id/textView4" />

    <EditText
        android:id="@+id/profile_school"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_email"
        android:layout_width="220dp"
        android:textSize="16dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"/>




    <EditText
        android:id="@+id/profile_major"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_school"
        android:textSize="16dp"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="MAJOR"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/profile_major"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profile_major" />

    <Button
        android:id="@+id/edit_profile_submit"
        android:layout_below="@id/profile_major"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/profile_major"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Submit CHanges"

        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_border3"/>

    <Button
        android:id="@+id/edit_profile_cancel"
        android:layout_below="@id/profile_major"
        android:layout_toRightOf="@+id/edit_profile_submit"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Cancel"

        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_border3"/>

    </RelativeLayout>


</RelativeLayout>



