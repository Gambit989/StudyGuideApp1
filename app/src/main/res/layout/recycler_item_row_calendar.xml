<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_Container"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="9dp"
    android:weightSum="1"
    android:background="@drawable/spinner_border_7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/calendar_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="15dp"
            android:text="Title: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/blue_grey_900"

            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/calendar_event_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/calendar_event_title"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="15dp"
            android:text="Title: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_event_title"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="Date: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/blue_grey_900" />

        <TextView
            android:id="@+id/calendar_date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/calendar_event_title2"
            android:layout_below="@id/calendar_event_title2"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/calendar_date"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="Date: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/black_text_secondary" />

        <TextView
            android:id="@+id/calendar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_date"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="Time: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/blue_grey_900" />

        <TextView
            android:id="@+id/calendar_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/calendar_date2"
            android:layout_below="@id/calendar_date2"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/calendar_time"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="Time: "
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/black_text_secondary" />

        <ImageView
            android:id="@+id/imageButton_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/calendar_event_title2"
            android:layout_alignEnd="@+id/calendar_event_title2"
            android:layout_marginStart="342dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_close" />




    </RelativeLayout>

</RelativeLayout>
