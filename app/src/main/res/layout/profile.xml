<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/profile_headline"
        android:text="Profile"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="200dp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_height="210dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <ImageButton
        android:id="@+id/imageButton_edit_profile_pic"
        android:layout_toRightOf="@id/imageView_profile"
        android:layout_marginTop="85dp"
        android:layout_marginStart="15dp"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:text="NAME"
        android:layout_alignTop="@+id/profile_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profile_name"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView_profile"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="EMAIL"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/profile_email"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profile_email" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_marginTop="13dp"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"
        android:layout_below="@+id/profile_name"
        android:layout_toEndOf="@+id/textView4" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="SCHOOL"
            android:textAlignment="center"
            android:textColor="@color/blue_grey_700"
            android:paddingTop="15dp"
            android:layout_alignTop="@+id/profile_school"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/profile_school"
            android:id="@+id/textView4" />

    <TextView
        android:id="@+id/profile_school"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_email"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"/>




    <TextView
        android:id="@+id/profile_major"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_school"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:paddingTop="14dp"
        android:textColor="@color/Black"
        android:text="placeholder"
        android:textAlignment="center"
        android:background="@drawable/spinner_border5"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="MAJOR"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/profile_major"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/profile_major" />

    <Button
        android:id="@+id/button_profile_edit_info"
        android:layout_below="@id/profile_major"
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="EDIT INFO"

        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_border3"/>


    </RelativeLayout>

</ScrollView>